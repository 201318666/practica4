@using AYD1_Practica3.Models
@model TransferViewModel
@{
    ViewBag.Title = "Transferencia";
}
<h2>TRANSFERENCIAS ELECTRONICAS</h2>

<div class="row">
    <div class="col-md-8">
        <section id="transferenciaForm">
            @using (Html.BeginForm("Transfer", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(m => m.DestinationAccountNumber, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.DestinationAccountNumber, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.DestinationAccountNumber, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Amount, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Amount, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Amount, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Realizar Transferencia" class="btn btn-default" />
                    </div>
                </div>
            }
        </section>
    </div>
</div>